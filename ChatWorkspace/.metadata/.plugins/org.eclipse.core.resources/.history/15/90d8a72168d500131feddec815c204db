var MongoClient = require('mongodb').MongoClient


function getMongo()
{
	MongoClient.connect('mongodb://127.0.0.1:27017/chatDB', function(err, db) {
	  if(err) throw err;
	  else
		  {
		  	db.collectionNames(function(err, collections){
		  		console.log(collections);
		  		console.log(db.collectionNames);
		  	});
		  	return db;
		  }
	});
}

exports.getTimePass = function()
{
	var db = getMongo();
	db.collection("timepass", function (err, timepass) {
		if(err) throw err;
		  else
			  {
			  	console.log(timepass.find().pretty());
			  	return timepass;
			  }
	});
}

var db= getMongo();
