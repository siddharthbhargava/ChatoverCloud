var assert = require('assert');
var mongojs = require('mongojs');
var db = mongojs('chatDB', ['clientDB2']);

function clientDBConnection(json){

	db.createCollection('clientDB', function(err,collection) {
	assert(!err);
	collection.inser({"clientID":json.clientID,"password":json.password,"clientName":json.clientName,"email":json.email,"domain":json.domain},function(err,res){
		assert(!err);
		console.log("Success");
	});
	});
}
