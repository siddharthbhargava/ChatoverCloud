var assert = require('assert');
var mongojs = require('mongojs');
var db = mongojs('chatDB', ['clientDB']);

function clientDBConnection(json){

	db.createCollection('clientDB', function(err,collection) {
	assert(!err);
	collection.inser(json,function(err,res){
		assert(!err);
		console.log("Success");
	});
	});
}

clientDBConnection({"clientID":"value","password":"value","clientName":"value","email":"value","domain":"value"});