var assert = require('assert');
var mongojs = require('mongojs');
var db = mongojs('chatDB', ['clientDB1']);

function clientDBConnection(json){

	db.createCollection('clientDB1', function(err,collection) {
	console.log(err);
	collection.insert({"clientID":json.clientID},function(err,res){
		console.log(err);
		console.log("Success");
	});
	});
}

clientDBConnection({"clientID":"123"});
